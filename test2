local myWindow = window.create(term.current(),15,5,20,5)
local x,y = myWindow.getSize()
myWindow.setBackgroundColor(colors.gray)
for i=1,x,1 do
  myWindow.setCursorPos(i,1)
  myWindow.write(" ")
  myWindow.setCursorPos(i,y)
  myWindow.write(" ")
end
for i=1,y,1 do
  myWindow.setCursorPos(1,i)
  myWindow.write(" ")
  myWindow.setCursorPos(x,i)
  myWindow.write(" ")
end
myWindow.setBackgroundColor(colors.black)
myWindow.setCursorPos(2,2)
--myWindow.write("hello")
term.redirect(myWindow)
input = read()
sleep(1)
myWindow.reposition(20,10,myWindow.getSize())
term.setCursorPos(3,3)
term.write("goodbye")
sleep(1)
term.redirect(term.native())
term.clear()
term.setCursorPos(1,1)
term.write("hello")
